# -*- coding: utf-8 -*-
# plugins
# FIXME: .module files are in 'plugins', and .plug are in "drivers"
def build(bld):
  print('â†’ building modules')
  modules_base=["24Cxx","27xx","28xx","93Cxx","mcs48","mcs51","prom"]
  for mod in modules_base:
    b=bld(
      features = 'c cshlib',
      source = mod+'.c',
      target=mod,
      install_path = "${PREFIX}/lib/geepro/plugins"
    ).env.cshlib_PATTERN       = '%s.module'

